= form_for @story_comment do |f|
  - if @story_comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@story_comment.errors.count, "error")} prohibited this story_comment from being saved:"
      %ul
        - @story_comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :story
    = f.text_field :story
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
