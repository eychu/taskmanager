.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand(href="/") TM
      .container.nav-collapse
        %ul.nav(class="pull-right")
          - if signed_in?
            %li= link_to t(:sign_out) +' '+ current_user.email, session_path(current_user), method: :delete
          - else
            %li= link_to t(:registration), new_user_path
            %li= link_to t(:sign_in), new_session_path
